// Prisma schema for TapCanvas backend
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  versions  FlowVersion[]
}

model User {
  id        String   @id // github user id as string
  login     String
  name      String?
  avatarUrl String?
  email     String?
  flows     Flow[]
  versions  FlowVersion[]
  projects  Project[]
  assets    Asset[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlowVersion {
  id        String   @id @default(uuid())
  flowId    String
  flow      Flow     @relation(fields: [flowId], references: [id])
  name      String
  data      Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Project {
  id        String  @id @default(uuid())
  name      String
  ownerId   String?
  owner     User?   @relation(fields: [ownerId], references: [id])
  flows     Flow[]
  assets    Asset[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset {
  id        String   @id @default(uuid())
  name      String
  data      Json
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlowExecution {
  id         String              @id @default(uuid())
  flowId     String
  flow       Flow                @relation(fields: [flowId], references: [id])
  userId     String
  user       User                @relation(fields: [userId], references: [id])
  workflowId String
  runId      String?
  status     FlowExecutionStatus
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  logs       FlowExecutionLog[]
}

model FlowExecutionLog {
  id          String        @id @default(uuid())
  executionId String
  execution   FlowExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  nodeId      String?
  level       String
  message     String
  createdAt   DateTime      @default(now())
}

enum FlowExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  ERROR
  CANCELED
}
