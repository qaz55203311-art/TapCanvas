// Prisma schema for TapCanvas backend
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  versions  FlowVersion[]
}

model User {
  id        String   @id // github user id as string
  login     String
  name      String?
  avatarUrl String?
  email     String?
  flows     Flow[]
  versions  FlowVersion[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlowVersion {
  id        String   @id @default(uuid())
  flowId    String
  flow      Flow     @relation(fields: [flowId], references: [id])
  name      String
  data      Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
