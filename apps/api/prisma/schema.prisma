// Prisma schema for TapCanvas backend
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // 临时禁用
}

generator client {
  provider = "prisma-client-js"
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  versions  FlowVersion[]
  executions FlowExecution[]
}

model User {
  id        String   @id // github user id as string
  login     String
  name      String?
  avatarUrl String?
  email     String?
  flows     Flow[]
  versions  FlowVersion[]
  projects  Project[]
  assets    Asset[]
  executions     FlowExecution[]
  modelProviders ModelProvider[]
  modelTokens    ModelToken[]
  externalDrafts ExternalDraft[]
  modelProfiles  ModelProfile[]
  taskTokenMappings TaskTokenMapping[]
  videoGenerationHistories VideoGenerationHistory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlowVersion {
  id        String   @id @default(uuid())
  flowId    String
  flow      Flow     @relation(fields: [flowId], references: [id])
  name      String
  data      Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Project {
  id        String  @id @default(uuid())
  name      String
  isPublic  Boolean @default(false)
  ownerId   String?
  owner     User?   @relation(fields: [ownerId], references: [id])
  flows     Flow[]
  assets    Asset[]
  videoGenerationHistories VideoGenerationHistory[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset {
  id        String   @id @default(uuid())
  name      String
  data      Json
  ownerId   String
  owner     User     @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ModelProvider {
  id        String        @id @default(uuid())
  name      String
  vendor    String        // e.g. "sora", "openai", "custom"
  baseUrl   String?       // custom domain / endpoint for this vendor
  ownerId   String
  owner     User          @relation(fields: [ownerId], references: [id])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  tokens    ModelToken[]
  endpoints ModelEndpoint[]
  profiles  ModelProfile[]
}

model ModelToken {
  id          String        @id @default(uuid())
  providerId  String
  provider    ModelProvider @relation(fields: [providerId], references: [id])
  label       String        // human friendly name, e.g. "Sora key #1"
  secretToken String        // API key / token (stored encrypted at rest on real deployment)
  userAgent   String?
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  enabled     Boolean       @default(true)
  /// Whether this token can be used as a shared fallback configuration by other users.
  shared              Boolean   @default(false)
  /// Number of consecutive failures when using this token as a shared configuration (within the same day).
  sharedFailureCount  Int       @default(0)
  /// The timestamp of the last failure when used as a shared configuration.
  sharedLastFailureAt DateTime?
  /// If set and greater than now, this shared configuration is temporarily disabled until that time (e.g. end of day after too many failures).
  sharedDisabledUntil DateTime?
  taskTokenMappings TaskTokenMapping[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model ModelEndpoint {
  id         String        @id @default(uuid())
  providerId String
  provider   ModelProvider @relation(fields: [providerId], references: [id])
  key        String        // e.g. "videos" | "video" | "sora"
  label      String
  baseUrl    String
  shared     Boolean       @default(false)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([providerId, key])
}

model ExternalDraft {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  provider     String   // e.g. "sora"
  remoteId     String   // upstream draft id, e.g. gen_xxx
  title        String?
  prompt       String?
  thumbnailUrl String?
  videoUrl     String?
  raw          Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastSeenAt   DateTime @default(now())
  useCount     Int      @default(0)
  embedding    Unsupported("vector")?

  @@unique([userId, provider, remoteId])
}

model FlowExecution {
  id         String              @id @default(uuid())
  flowId     String
  flow       Flow                @relation(fields: [flowId], references: [id])
  userId     String
  user       User                @relation(fields: [userId], references: [id])
  workflowId String
  runId      String?
  status     FlowExecutionStatus
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  logs       FlowExecutionLog[]
}

model FlowExecutionLog {
  id          String        @id @default(uuid())
  executionId String
  execution   FlowExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  nodeId      String?
  level       String
  message     String
  createdAt   DateTime      @default(now())
}

model ModelProfile {
  id         String        @id @default(uuid())
  ownerId    String
  owner      User          @relation(fields: [ownerId], references: [id])
  name       String
  kind       ProfileKind   // capability, e.g. text_to_image, text_to_video
  providerId String
  provider   ModelProvider @relation(fields: [providerId], references: [id])
  modelKey   String?       // provider-specific model identifier, e.g. "qwen-vl-plus"
  settings   Json?         // provider-specific default settings/overrides
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([ownerId, kind])
}

enum ProfileKind {
  chat
  prompt_refine
  text_to_image
  image_to_video
  text_to_video
  image_edit
}

enum FlowExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  ERROR
  CANCELED
}

// 任务Token映射表 - 解决多Token一致性问题
model TaskTokenMapping {
  id          String   @id @default(uuid())
  taskId      String   // Sora任务的唯一标识（task_id, generation_id等）
  userId      String   // 用户ID
  tokenId     String   // 创建时使用的Token ID
  provider    String   // 提供商名称（sora, openai等）
  createdAt   DateTime @default(now())
  expiresAt   DateTime // 任务过期时间（避免数据永久增长）

  // 关联
  token       ModelToken @relation(fields: [tokenId], references: [id])
  user        User       @relation(fields: [userId], references: [id])

  @@unique([taskId, provider])
  @@index([userId, provider])
  @@index([expiresAt])
}

// 任务状态追踪表
model TaskStatus {
  id          String   @id @default(uuid())
  taskId      String   // 任务唯一标识
  provider    String   // 提供商名称
  status      String   // pending, running, success, error, canceled
  data        Json?    // 任务相关数据
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?

  @@unique([taskId, provider])
  @@index([status])
  @@index([createdAt])
}

// 视频生成历史记录表
model VideoGenerationHistory {
  id          String   @id @default(uuid())
  userId      String   // 用户ID
  nodeId      String   // 画布中的节点ID
  projectId   String?  // 项目ID（可选）

  // 输入参数
  prompt      String   // 提示词
  parameters  Json?    // 生成参数（orientation, size, n_frames等）
  imageUrl    String?  // 输入图片URL（图生视频）
  remixTargetId String? // Remix目标ID

  // 生成结果
  taskId      String   // 任务ID (task_ 开头)
  generationId String? // 生成ID (gen_ 开头) - 用于remix
  postId      String?  // 发布ID (s_ 开头) - 用于Sora remix
  status      String   // pending, running, success, error
  videoUrl    String?  // 生成的视频URL
  thumbnailUrl String? // 缩略图URL
  duration    Int?     // 视频时长（秒）
  width       Int?     // 视频宽度
  height      Int?     // 视频高度

  // 元数据
  tokenId     String?  // 使用的Token ID
  provider    String   // 提供商（sora, runway等）
  model       String?  // 使用的模型
  cost        Float?   // 生成成本（如果可计算）

  // 用户标记
  isFavorite  Boolean @default(false)
  rating      Int?     // 用户评分（1-5）
  notes       String?  // 用户备注

  // 时间戳
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 关联
  user        User     @relation(fields: [userId], references: [id])
  project     Project? @relation(fields: [projectId], references: [id])

  @@index([userId, nodeId])
  @@index([userId, projectId])
  @@index([status])
  @@index([createdAt])
  @@index([isFavorite])
}
