// Prisma schema for TapCanvas backend
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Flow {
  id        String   @id @default(uuid())
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  versions  FlowVersion[]
  executions FlowExecution[]
}

model User {
  id        String   @id // github user id as string
  login     String
  name      String?
  avatarUrl String?
  email     String?
  flows     Flow[]
  versions  FlowVersion[]
  projects  Project[]
  assets    Asset[]
  executions     FlowExecution[]
  modelProviders ModelProvider[]
  modelTokens    ModelToken[]
  externalDrafts ExternalDraft[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FlowVersion {
  id        String   @id @default(uuid())
  flowId    String
  flow      Flow     @relation(fields: [flowId], references: [id])
  name      String
  data      Json
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Project {
  id        String  @id @default(uuid())
  name      String
  ownerId   String?
  owner     User?   @relation(fields: [ownerId], references: [id])
  flows     Flow[]
  assets    Asset[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Asset {
  id        String   @id @default(uuid())
  name      String
  data      Json
  ownerId   String?
  owner     User?    @relation(fields: [ownerId], references: [id])
  projectId String?
  project   Project? @relation(fields: [projectId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ModelProvider {
  id        String        @id @default(uuid())
  name      String
  vendor    String        // e.g. "sora", "openai", "custom"
  baseUrl   String?       // custom domain / endpoint for this vendor
  ownerId   String
  owner     User          @relation(fields: [ownerId], references: [id])
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  tokens    ModelToken[]
  endpoints ModelEndpoint[]
}

model ModelToken {
  id          String        @id @default(uuid())
  providerId  String
  provider    ModelProvider @relation(fields: [providerId], references: [id])
  label       String        // human friendly name, e.g. "Sora key #1"
  secretToken String        // API key / token (stored encrypted at rest on real deployment)
  userAgent   String?
  userId      String
  user        User          @relation(fields: [userId], references: [id])
  enabled     Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model ModelEndpoint {
  id         String        @id @default(uuid())
  providerId String
  provider   ModelProvider @relation(fields: [providerId], references: [id])
  key        String        // e.g. "videos" | "video" | "sora"
  label      String
  baseUrl    String
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@unique([providerId, key])
}

model ExternalDraft {
  id           String   @id @default(uuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  provider     String   // e.g. "sora"
  remoteId     String   // upstream draft id, e.g. gen_xxx
  title        String?
  prompt       String?
  thumbnailUrl String?
  videoUrl     String?
  raw          Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  lastSeenAt   DateTime @default(now())
  useCount     Int      @default(0)
  embedding    Unsupported("vector")?

  @@unique([userId, provider, remoteId])
}

model FlowExecution {
  id         String              @id @default(uuid())
  flowId     String
  flow       Flow                @relation(fields: [flowId], references: [id])
  userId     String
  user       User                @relation(fields: [userId], references: [id])
  workflowId String
  runId      String?
  status     FlowExecutionStatus
  createdAt  DateTime            @default(now())
  updatedAt  DateTime            @updatedAt
  logs       FlowExecutionLog[]
}

model FlowExecutionLog {
  id          String        @id @default(uuid())
  executionId String
  execution   FlowExecution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  nodeId      String?
  level       String
  message     String
  createdAt   DateTime      @default(now())
}

enum FlowExecutionStatus {
  PENDING
  RUNNING
  SUCCESS
  ERROR
  CANCELED
}
